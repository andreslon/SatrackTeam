<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SatrackTeam.Cross.Views.LoginPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             Icon="icon.png"
             Title="" >

  <Grid Padding="20">
    <ScrollView>
      <StackLayout HorizontalOptions="Center">
        <Grid Padding="20">
          <Image  Source="satrack.png" WidthRequest="130" HeightRequest="130"></Image>
        </Grid>
        <Entry    Keyboard="Text" IsPassword="False" Placeholder="Usuario" FontSize="14" WidthRequest="269"  />
        <Entry   Keyboard="Text" IsPassword="True" Placeholder="Contraseña" FontSize="12" WidthRequest="269"/>
        <Button Command="{Binding entrarprueba}" TextColor="White" BackgroundColor="{ StaticResource ThemeColor}" Text="Ingresar"></Button>


      </StackLayout>
    </ScrollView>
  </Grid>


</ContentPage>